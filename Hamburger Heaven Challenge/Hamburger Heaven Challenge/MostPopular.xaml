    <!--Some buttons, to refine the search, of course non of them are workin, hope Bob will teach us :)-->    
        
      <StackPanel Grid.Column="0" Style="{StaticResource StackPanelStyle}">
          
          <Button Content="Region" 
                  Style="{StaticResource FlyoutButtonStyle}">
              <Button.Flyout>
                  <MenuFlyout>
                        <MenuFlyoutItem Text="Capital" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Burgundy" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Champagne-Ardenne" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Nord-Pas-de-Calais" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Auvergne" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Rhône-Alpes" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Lorraine" Click="Region_Click"/>
                        <MenuFlyoutItem Text="Midi-Pyrénées" Click="Region_Click"/>
                    </MenuFlyout>
              </Button.Flyout>
          </Button>

            <Button Content="Sort by: " 
                  Style="{StaticResource FlyoutButtonStyle}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Bestsellers" Click="SortBy_Click"/>
                        <MenuFlyoutItem Text="Price descending" Click="SortBy_Click"/>
                        <MenuFlyoutItem Text="Price ascending" Click="SortBy_Click"/>
                        <MenuFlyoutItem Text="Highest rating first" Click="SortBy_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button Content="Number of rooms:" 
                  Style="{StaticResource FlyoutButtonStyle}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="1 room" Click="RoomNumber_Click"/>
                        <MenuFlyoutItem Text="2 rooms" Click="RoomNumber_Click"/>
                        <MenuFlyoutItem Text="3 rooms" Click="RoomNumber_Click"/>
                        <MenuFlyoutItem Text="4 or more rooms..." Click="RoomNumber_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

        </StackPanel>

        <StackPanel Style="{StaticResource StackPanelStyle}" Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Selected categories: " Style="{StaticResource TextBlockStyle}" />
            <TextBlock Name="ResultTextBlock" Style="{StaticResource TextBlockStyle}"  />
        </StackPanel>

        
